<% @projects.each do |project| %>
<div class="col-md-4">
  <div class="project">
    <div class="project-header">
      <h2><%= project.title %></h2>
    </div>
      <% project.todos.all.each do |todo| %>
      <div class="project-todos">
        <%= form_for :todos, :url => todo_path(todo), method: :patch, html: {id: "update" } do |f| %>
          <div class="todo">
            <div class="todo-checkbox">
              <%= f.check_box(:isCompleted,{checked: todo.isCompleted},todo.id) %> 
            </div>
            <div class="todo-text">
              <%= todo.text %>
            </div>
              <%= f.hidden_field :id, :value => todo.id %>
          </div>
        <% end %>
      </div>
     <% end %>
  </div>
</div>                
<% end %>

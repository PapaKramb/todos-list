<div class="col-md-4"></div>
<div class="col-md-4">
<%= form_for @todo do |f| %>

    <div class="form-group">
      <%= f.label 'Новая задача:' %>
      <%= select_tag "project_id", options_for_select(Project.pluck(:title, :id)), { :class => "form form-group form-control" } %>
    </div>
      
    <div class="form-group">
      <%= f.label 'Новое задание', class: "exampleInputEmail1" %>
      <%= f.text_field(:text, {:class => "form-control"})%>
    </div>

<%= f.submit 'Добавить', ({:class => "btn btn-primary"}) %>

<% end %>
</div>